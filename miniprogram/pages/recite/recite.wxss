  background: transparent;
  background-image: url('http://pr37lb7al.bkt.clouddn.com/recite_tip.png');
  background-repeat:no-repeat;
  background-size:80% 100%;
  -moz-background-size:100% 100%;
  border: none;
  float: left;
  margin-left: 100rpx;
  margin-top: 70rpx;

}
.content .bot  .record_button{
  width:25%;
  height: 180rpx;
  background: transparent;
  background-image: url('http://pr37lb7al.bkt.clouddn.com/recite_soundRecord.png');
  background-repeat:no-repeat;
  background-size:100% 100%;
  -moz-background-size:100% 100%;
  border: none;
  float: left;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.content .bot  .record_button1{
  width:25%;
  height: 180rpx;
  background: transparent;
  background-image: url('http://pr37lb7al.bkt.clouddn.com/recite_soundRecord_ed.png');
  background-repeat:no-repeat;
  background-size:100% 100%;
  -moz-background-size:100% 100%;
  border: none;
  float: left;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.content .bot  .finish_button{
  width: 15%;
  height: 70rpx;
  background: transparent;
  background-image: url('http://pr37lb7al.bkt.clouddn.com/recite_accom.png');
  background-repeat:no-repeat;
  background-size:80% 100%;
  -moz-background-size:100% 100%;
  border: none;
  margin-left: 420rpx;
  margin-top: 70rpx;

}

button::after {
  border: none;
}
/*
*底部弹窗
*/

.tip_hid{
  width: 100%;
  height:100%;
  position: absolute;
  top: 0rpx; 
  background-color: rgba(0, 0, 0, 0.281);
}
.tip_content{
  width: 79%;
  height:60%;
  background-color: #fff;
  position: absolute;
  bottom:  -50rpx;
  padding: 80rpx;
  padding-top: 20rpx;
  padding-bottom: 120rpx;
  z-index: 10;
  font-size: 32rpx;
  line-height: 60rpx;
  border-radius: 20rpx;
  text-align: center;
}
.tip_title{
  width: 100%;
  border-bottom:  rgba(0, 0, 0, 0.236) solid 1rpx;
  margin-bottom: 50rpx;
  line-height: 100rpx;
}
