page {
  height: 100%;
  width: 100%;
  background-color: #eef9ea;
}

.page{
  height: 100%;
  width: 100%;
}

.top{
  height: 11%;
  width: 100%;
}

/**第一部分*/
.page_search {
  height: 80rpx;
  width: 100%;
  margin-bottom: 50rpx;
}

/**第一部分_输入框*/
.page_search_input {
  height: 100%;
  width: 320rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
  float: left;
  padding-left: 60rpx;
  background-image: url(http://pr37lb7al.bkt.clouddn.com/index_search_bg.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  font-size: 32rpx;
}

/**第一部分_按钮*/
.page_search_button {
  width: 12%;
  height: 100%;
  margin-top: 20rpx;
  float: left;
  /* opacity:0;*/
  background: transparent;
  background-image: url(http://pr37lb7al.bkt.clouddn.com/index_search_icon1.png);
  background-repeat: no-repeat;
  background-size: 70% 60%;
  -moz-background-size: 100% 100%;
  background-position: center;
  border: none;
}

button::after {
  border: none;
}

/**第一部分_下拉框*/
.select_box {
  width: 20%;
  height: 100%;
  border-radius: 14rpx;
  position: relative;
  float: left;
  margin-top: 20rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  font-size: 32rpx;
  background-image: url(http://pr37lb7al.bkt.clouddn.com/index_search_icon_bg.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
}

.select_box .select {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
}

.select_box .select .select_text {
  color: #fff;
  line-height: 50rpx;
  flex: 1;
}

.select_box .select .select_img_rotate {
  transform: rotate(180deg);
}

.select_box .option_box {
  position: absolute;
  top: calc(100% - 1px);
  width: 100%;
  box-sizing: border-box;
  overflow-y: auto;
  background-color: #90cdab;
  transition: height 0.3s;
  color: #fff;
  font-size: 32rpx;
}

.select_box .option_box .option {
  display: block;
  line-height: 30rpx;
  border-top: 1px solid #efefef;
  border-bottom: 1px solid #efefef;
  padding: 15rpx;
}

/**第二部分*/
.search_content {
  width: 100%;
  height: 89%;
  /* background-color: white; */
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.search_content .search_content_bg{
  width: 100%;
  height: 90rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
  line-height:90rpx; /*文字上下居中*/
  background-color: white;
  box-shadow:0px 10px 50rpx #90cdab;
}

/**第三部分*/
.page_content {
  height: 300rpx;
  width: 100%;
}

/**第三部分_静态文字部分*/
.page_content_recommendation {
  width: 90%;
  height: 50rpx;
  margin-left: 5%;
  margin-right: 5%;
  background-color: #fff;
  margin-bottom: 12rpx;
  color: #f0ca4d;
  font-size: 24rpx;
}

.page_content_recommendation .text {
  margin-left: 25rpx;
  width: 130rpx;
  height: 100%;
  text-align: center;
  line-height: 50rpx;
}

/**第三部分_动态文字部分*/
.page_content_rec {
  width: 90%;
  height: 50rpx;
  margin-left: 5%;
  margin-right: 5%;
  margin-bottom: 6rpx;
  color: #000;
  font-size: 28rpx;
  background-image: url(http://pr37lb7al.bkt.clouddn.com/search-bg.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
}

.page_content_rec .textleft {
  text-align: left;
  float: left;
  margin-left: 20rpx;
}

.page_content_rec .textright {
  text-align: right;
  margin-right: 20rpx;
}
