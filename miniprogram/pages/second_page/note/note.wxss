/* pages/second_page/note/note.wxss */
Page{
width: 100%;
height: 100%;
 background-image: url('http://pr37lb7al.bkt.clouddn.com/second-note-bg.png '); 
   background-repeat:no-repeat;
  background-size:100% 100%;
  -moz-background-size:100% 100%;
 position: fixed;
}
.content{
  width: 90%;
  height:90%;
  margin:auto;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  background-image: url('http://pr37lb7al.bkt.clouddn.com/second-note-borderbg.png '); 
  background-repeat:no-repeat;
  background-size:100% 100%;
  -moz-background-size:100% 100%;
 
}
/*
*第一部分
*/
.content .top{
  width: 80%;
  height: 100rpx;  
  padding-left: 60rpx;
  margin-top: 30rpx;
  margin-left: 40rpx;

}
  /*
  *日期
  */
.content .top .date{
  width:80%;
  font-size: 32rpx;
  margin-top: 45rpx;
  float: left;
  color:#90cdab;
} 
  /*
  *编辑按钮
  */
.content .top .edit{
  width: 50rpx;
  height: 50rpx;
  background: transparent;
  background-image: url('http://pr37lb7al.bkt.clouddn.com/second-note-icon.png');
  background-repeat:no-repeat;
  background-size:80% 100%;
  -moz-background-size:100% 100%;
  border: none;
  position: absolute;
  top:90rpx;
  left:83%;
  }
/*
*第二部分
*/
.content .mid{
  width: 90%;
  height: 85%;
  margin: auto;
  padding: 0rpx;
  z-index: 1;
}
  /*
  *笔记
  */
.content .mid .note{
  width: 90%;
  height: 90%;
  margin: auto;
  margin-top: 35rpx;
  font-size: 32rpx;
  line-height: 60rpx;
  z-index: 10;
}
  /*
  *发表按钮
  */
.content .mid  .publish_button{
  width: 30%;
  height: 80rpx;
  background-color: #09bb07;
  margin: auto;
  position: absolute;
  bottom: 130rpx;
  left: 270rpx;
  border-radius: 100rpx;
  line-height: 80rpx;
  color: #fff;
}

button::after {
  border: none;
}
